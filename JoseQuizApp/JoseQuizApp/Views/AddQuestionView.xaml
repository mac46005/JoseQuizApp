<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JoseQuizApp.Views.AddQuestionView"
             Title="Add Question">
    <ContentPage.Content>
        <StackLayout>
            <TableView>
                <TableRoot>
                    <TableSection>
                        <EntryCell Label="Value:"/>
                        <TextCell Text="Select Answer"/>
                        <ViewCell>
                            <Picker ItemsSource="{Binding AnswerList}"
                                    SelectedItem="{Binding SelectedAnswer}"
                                    ItemDisplayBinding="{Binding Solution}"
                                    >
                            </Picker>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button Text="Submit" Command="{Binding Submit_Clicked}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>