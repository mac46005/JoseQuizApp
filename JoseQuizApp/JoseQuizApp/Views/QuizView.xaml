<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JoseQuizApp.Views.QuizView"
             Title="{Binding QuestionCount}">
    <StackLayout>
        <TableView>
            <TableRoot>
                <TableSection>
                    <TextCell Text="{Binding Question.Query}"/>
                    <EntryCell Label="Your Response:" Text="{Binding YourResponse.Response}"/>
                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Next" Command="{Binding Next_CLicked}"/>
    </StackLayout>
</ContentPage>