<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JoseQuizApp.Views.AddAnswerView"
             Title="Add Answer">
    <ContentPage.Content>
        <StackLayout>
            <TableView>
                <TableRoot>
                    <TableSection>
                        <EntryCell Label="Value:" Text="{Binding Answer.Solution}"/>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button Text="Submit" Command="{Binding Submit_Clicked}"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>